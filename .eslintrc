{
  "parser": "babel-eslint",
  "plugins": ["react", "import", "jsx-a11y", "jsx-control-statements"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/prop-types": [2],
    "react/jsx-no-undef": [2, { "allowGlobals": true }]
  },
  "extends": ["airbnb", "plugin:jsx-control-statements/recommended"]
}